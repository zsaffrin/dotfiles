# Shell navigation aliases
alias l="eza --long --color=always --icons=always --time=modified --no-user --no-permissions --total-size"
alias la="eza --all --long --color=always --icons=always --time=modified --no-user --no-permissions --total-size"
alias lt="eza --tree --long --color=always --icons=always --time=modified --no-user --no-permissions --total-size"
alias lta="eza --all --tree --long --color=always --icons=always --time=modified --no-user --no-permissions --total-size"

# Docker aliases
alias dcup="docker compose up -d"
alias dcupl="docker compose up -d && docker compose logs -tf"
alias dcdown="docker compose down"
alias dcp="docker compose pull"